# RevivaTech New Platform Frontend Environment Variables

# Application Configuration
NODE_ENV=development
PORT=3010
NEXT_PUBLIC_API_URL=http://new-backend:3011
NEXT_PUBLIC_DOMAIN=en
NEXT_PUBLIC_LOCALE=en-GB
NEXT_PUBLIC_CURRENCY=GBP
NEXT_PUBLIC_TIMEZONE=Europe/London

# Development optimizations
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
NEXT_TELEMETRY_DISABLED=1

# Auth0 Configuration
NEXT_PUBLIC_AUTH0_DOMAIN=revivatech.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=your-auth0-api-audience

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.revivatech.co.uk
NEXT_PUBLIC_IMAGES_URL=https://images.revivatech.co.uk