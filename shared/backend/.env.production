# RevivaTech Production Environment Variables
# Copy this file to .env and update with production values

# Server Configuration
NODE_ENV=production
PORT=3011
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
DB_HOST=new-database
DB_PORT=5432
DB_NAME=revivatech_new
DB_USER=revivatech_user
DB_PASSWORD=CHANGE_IN_PRODUCTION_STRONG_PASSWORD
DATABASE_URL=postgresql://revivatech_user:CHANGE_IN_PRODUCTION_STRONG_PASSWORD@new-database:5432/revivatech_new

# Redis Configuration
REDIS_HOST=new-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_IN_PRODUCTION_REDIS_PASSWORD

# Session Configuration
SESSION_SECRET=CHANGE_IN_PRODUCTION_COMPLEX_SECRET_STRING

# JWT Configuration
JWT_SECRET=CHANGE_IN_PRODUCTION_JWT_SECRET_KEY
JWT_EXPIRES_IN=24h

# Email Configuration (Production Ready)
# Option 1: Gmail (Recommended for small-medium scale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@revivatech.co.uk
SMTP_PASS=your-gmail-app-password
SMTP_FROM_EMAIL=noreply@revivatech.co.uk
SMTP_FROM_NAME=RevivaTech

# Option 2: SendGrid (Recommended for high volume)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# Option 3: AWS SES (Enterprise solution)
# SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-ses-access-key
# SMTP_PASS=your-ses-secret-key

# Auth0 Configuration
AUTH0_DOMAIN=revivatech.auth0.com
AUTH0_CLIENT_ID=your-production-auth0-client-id
AUTH0_CLIENT_SECRET=your-production-auth0-client-secret
AUTH0_AUDIENCE=https://api.revivatech.co.uk

# File Upload Configuration
UPLOAD_MAX_SIZE=100MB
UPLOAD_PATH=/app/uploads

# External API Configuration
API_BASE_URL=https://api.revivatech.co.uk
FRONTEND_URL=https://revivatech.co.uk

# Security Configuration
TRUST_PROXY=true
CORS_ORIGIN=https://revivatech.co.uk,https://www.revivatech.co.uk

# Rate Limiting (Production Values)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CRM Integration
CRM_WEBHOOK_URL=https://crm.revivatech.com.br/api/webhooks
CRM_API_KEY=your-production-webhook-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=revivatech-backups
BACKUP_S3_REGION=eu-west-1

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/revivatech.crt
SSL_KEY_PATH=/etc/ssl/private/revivatech.key

# External Services
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret