# Environment Configuration
NODE_ENV=development

# Application
APP_NAME="RevivaTech"
APP_URL=http://localhost:3000

# API Configuration
API_URL=http://localhost:3001/api

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/revivatech

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# External Services
CHATWOOT_URL=https://your-chatwoot-instance.com
CHATWOOT_TOKEN=your-chatwoot-api-token

# Email Service (Development - MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=dev@revivatech.local

# Email Service (Production - SendGrid/AWS SES)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM=noreply@revivatech.com

# Cloud Storage (AWS S3)
AWS_REGION=eu-west-2
AWS_S3_BUCKET=revivatech-uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
HOTJAR_ID=1234567

# Cache (Redis)
REDIS_URL=redis://localhost:6379

# Development Tools
ANALYZE=false
BUNDLE_ANALYZER=false

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_CHAT=true
ENABLE_PAYMENTS=false
ENABLE_ANALYTICS=false
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_REALTIME_UPDATES=true
ENABLE_ADVANCED_BOOKING=true
ENABLE_MULTI_LOCATION=false

# CRM Integration
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/socket.io

# Domain Configuration (for dual-domain setup)
WEBSITE_DOMAIN=revivatech.com
CRM_DOMAIN=crm.revivatech.com
API_DOMAIN=api.revivatech.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/revivatech.crt
SSL_KEY_PATH=/etc/ssl/private/revivatech.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=revivatech-backups

# Performance
ENABLE_COMPRESSION=true
ENABLE_STATIC_OPTIMIZATION=true
CDN_URL=https://cdn.revivatech.com

# Testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/revivatech_test
CYPRESS_BASE_URL=http://localhost:3000
E2E_TEST_USER_EMAIL=test@example.com
E2E_TEST_USER_PASSWORD=password123