.animate-fadeIn {
  animation: fadeIn 200ms ease;
}

.animate-fadeOut {
  animation: fadeOut 200ms ease;
}

/* === OPTIMIZED ANIMATED STARS BACKGROUND === */
/* GPU-accelerated animations using transform3d for better performance */

@keyframes stars-twinkle-1 {
  0%, 100% {
    opacity: 0.7;
    transform: translate3d(0, 0, 0) scale(1) rotate(0deg);
  }
  25% {
    opacity: 1;
    transform: translate3d(5px, -10px, 0) scale(1.1) rotate(90deg);
  }
  50% {
    opacity: 0.9;
    transform: translate3d(-5px, -5px, 0) scale(1.2) rotate(180deg);
  }
  75% {
    opacity: 1;
    transform: translate3d(-10px, 10px, 0) scale(1.1) rotate(270deg);
  }
}

@keyframes stars-twinkle-2 {
  0%, 100% {
    opacity: 0.5;
    transform: translate3d(0, 0, 0) scale(1);
  }
  33% {
    opacity: 0.8;
    transform: translate3d(10px, -15px, 0) scale(1.3);
  }
  66% {
    opacity: 0.9;
    transform: translate3d(-15px, 5px, 0) scale(1.1);
  }
}

@keyframes stars-twinkle-3 {
  0%, 100% {
    opacity: 0.3;
    transform: translate3d(0, 0, 0) scale(1);
  }
  50% {
    opacity: 0.7;
    transform: translate3d(-8px, -20px, 0) scale(1.4);
  }
}

@keyframes optimized-color-shift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* Performance-optimized classes */
.animate-stars-twinkle-1 {
  animation: stars-twinkle-1 30s ease-in-out infinite;
  will-change: transform, opacity;
}

.animate-stars-twinkle-2 {
  animation: stars-twinkle-2 45s ease-in-out infinite;
  will-change: transform, opacity;
}

.animate-stars-twinkle-3 {
  animation: stars-twinkle-3 60s ease-in-out infinite;
  will-change: transform, opacity;
}

.animate-optimized-color-shift {
  animation: optimized-color-shift 40s ease-in-out infinite;
  will-change: background-position;
}

/* Accessibility: Respect prefers-reduced-motion */
@media (prefers-reduced-motion: reduce) {
  .animate-stars-twinkle-1,
  .animate-stars-twinkle-2,
  .animate-stars-twinkle-3,
  .animate-optimized-color-shift {
    animation: none !important;
    opacity: 0.5;
  }
}
