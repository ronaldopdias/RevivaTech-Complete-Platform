  --duration-slowest: 800ms;
  
  /* Easing Functions */
  --easing-linear: cubic-bezier(0.0, 0.0, 1.0, 1.0);
  --easing-ease: cubic-bezier(0.25, 0.1, 0.25, 1.0);
  --easing-ease-in: cubic-bezier(0.42, 0.0, 1.0, 1.0);
  --easing-ease-out: cubic-bezier(0.0, 0.0, 0.58, 1.0);
  --easing-ease-in-out: cubic-bezier(0.42, 0.0, 0.58, 1.0);
  --easing-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --easing-elastic: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  --easing-interface: cubic-bezier(0.4, 0.0, 0.2, 1.0);
  --easing-interface-out: cubic-bezier(0.0, 0.0, 0.2, 1.0);
  --easing-interface-in: cubic-bezier(0.4, 0.0, 1.0, 1.0);
  
  /* === SEMANTIC COLOR TOKENS === */
  --color-background: var(--neutral-white);
  --color-foreground: var(--neutral-900);
  --color-primary: var(--primary-500);
  --color-secondary: var(--secondary-500);
  --color-accent: var(--accent-500);
  --color-muted: var(--neutral-50);
  --color-muted-foreground: var(--neutral-600);
  --color-border: var(--neutral-200);
