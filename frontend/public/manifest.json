{
  "name": "RevivaTech - Professional Computer Repair",
  "short_name": "RevivaTech",
  "description": "Professional computer and device repair services in London. Book repairs, track progress, and manage your devices with RevivaTech. Enhanced mobile PWA with offline capabilities.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0EA5E9",
  "orientation": "any",
  "scope": "/",
  "id": "revivatech-pwa-v2",
  
  "icons": [
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Book Repair",
      "short_name": "Book",
      "description": "Book a new device repair",
      "url": "/book-repair",
      "icons": [
        {
          "src": "/icons/shortcut-book.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Repair",
      "short_name": "Track",
      "description": "Track your repair progress",
      "url": "/track",
      "icons": [
        {
          "src": "/icons/shortcut-track.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Admin Dashboard",
      "short_name": "Admin",
      "description": "Access admin dashboard with component library",
      "url": "/admin",
      "icons": [
        {
          "src": "/icons/shortcut-admin.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Customer Portal",
      "short_name": "Portal",
      "description": "Access your customer dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": ["business", "productivity", "utilities"],
  "lang": "en-GB",
  "dir": "ltr",
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+revivatech",
      "url": "/track?ref=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "share_target": {
    "action": "/book-repair",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "device",
      "text": "description",
      "url": "reference",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "screenshots": [
    {
      "src": "/screenshots/mobile-admin-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Admin Dashboard on Desktop"
    },
    {
      "src": "/screenshots/mobile-admin-narrow.png", 
      "sizes": "720x1280",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile Admin Dashboard"
    },
    {
      "src": "/screenshots/component-showcase.png",
      "sizes": "720x1280", 
      "type": "image/png",
      "platform": "narrow",
      "label": "Component Library"
    }
  ],
  
  "handle_links": "preferred",
  
  "version": "2.0.0",
  
  "features": [
    "offline-functionality",
    "component-library", 
    "admin-dashboard",
    "mobile-optimized",
    "pwa-enhanced"
  ],
  
  "related_applications": [],
  
  "iarc_rating_id": "",
  
  "permissions": [
    "notifications",
    "camera",
    "persistent-storage"
  ]
}