# RevivaTech Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_HOST=revivatech_database_prod
DATABASE_PORT=5432
DATABASE_NAME=revivatech_prod
DATABASE_USER=revivatech_user

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=revivatech_redis_prod
REDIS_PORT=6379

# Authentication
JWT_SECRET=your_secure_jwt_secret_at_least_32_chars_long
JWT_REFRESH_SECRET=your_secure_refresh_secret_different_from_jwt

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@revivatech.co.uk

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# Application Configuration
NODE_ENV=production
PORT=3011
FRONTEND_URL=https://revivatech.co.uk
API_URL=https://api.revivatech.co.uk

# Security
CORS_ORIGIN=https://revivatech.co.uk,https://revivatech.com.br
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Analytics & Monitoring
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance
MAX_UPLOAD_SIZE=10485760
SESSION_TIMEOUT=3600000
CACHE_TTL=300