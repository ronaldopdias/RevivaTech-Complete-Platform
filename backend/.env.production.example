# RevivaTech Backend Production Environment Configuration
# This file shows the production configuration pattern

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PORT=3011
HOST=0.0.0.0

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://username:password@production-db-host:5432/revivatech_prod
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# Redis Configuration  
# =============================================================================
REDIS_HOST=production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=2000

# =============================================================================
# Authentication Configuration
# =============================================================================
BETTER_AUTH_SECRET=your-production-better-auth-secret-very-long-and-secure
JWT_SECRET=your-production-jwt-secret-very-long-and-secure
SESSION_EXPIRES_IN=604800
TOKEN_EXPIRES_IN=86400
REFRESH_TOKEN_EXPIRES_IN=2592000
BCRYPT_ROUNDS=12
TRUST_HOST=false

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=https://revivatech.co.uk,https://www.revivatech.co.uk
CORS_CREDENTIALS=true

# =============================================================================
# Email Configuration (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.your-production-sendgrid-api-key-here
EMAIL_FROM=noreply@revivatech.co.uk
EMAIL_FROM_NAME=RevivaTech
EMAIL_REPLY_TO=support@revivatech.co.uk

# =============================================================================
# SMS Configuration (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=+44xxxxxxxxxx

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf
UPLOAD_DIR=/var/www/uploads

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_INCLUDE_STACK=false
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/revivatech/app.log

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_ENABLED=true

# =============================================================================
# Security Configuration
# =============================================================================
HELMET_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# =============================================================================
# API Configuration
# =============================================================================
API_BASE_URL=https://api.revivatech.co.uk
API_PREFIX=/api
API_VERSION=v1
API_PAGINATION_DEFAULT_LIMIT=20
API_PAGINATION_MAX_LIMIT=100

# =============================================================================
# Production Flags
# =============================================================================
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# =============================================================================
# External Service URLs
# =============================================================================
FRONTEND_URL=https://revivatech.co.uk
WEBHOOK_BASE_URL=https://api.revivatech.co.uk