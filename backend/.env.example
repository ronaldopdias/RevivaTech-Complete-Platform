# RevivaTech Backend Environment Configuration
# Copy this file to .env and update with your actual values
# SECURITY WARNING: Never commit .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3011
HOST=localhost

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=revivatech_database
DB_PORT=5432
DB_NAME=revivatech
DB_USER=your-secure-db-user
DB_PASSWORD=your-secure-db-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=10000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=revivatech_redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# =============================================================================
# Authentication Configuration
# =============================================================================
BETTER_AUTH_SECRET=your-better-auth-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production
SESSION_EXPIRES_IN=604800
TOKEN_EXPIRES_IN=86400
REFRESH_TOKEN_EXPIRES_IN=2592000
BCRYPT_ROUNDS=12
TRUST_HOST=true

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3010,http://localhost:3011,https://revivatech.co.uk,https://www.revivatech.co.uk
CORS_CREDENTIALS=true

# =============================================================================
# Email Configuration (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@revivatech.co.uk
EMAIL_FROM_NAME=RevivaTech
EMAIL_REPLY_TO=support@revivatech.co.uk

# =============================================================================
# SMS Configuration (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx
UPLOAD_DIR=uploads

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_INCLUDE_STACK=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=false

# =============================================================================
# Security Configuration
# =============================================================================
HELMET_ENABLED=true
HTTPS_ONLY=false
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# =============================================================================
# API Configuration
# =============================================================================
API_BASE_URL=http://localhost:3011
API_PREFIX=/api
API_VERSION=v1
API_PAGINATION_DEFAULT_LIMIT=20
API_PAGINATION_MAX_LIMIT=100

# =============================================================================
# Development/Production Flags
# =============================================================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# =============================================================================
# External Service URLs
# =============================================================================
FRONTEND_URL=http://localhost:3010
WEBHOOK_BASE_URL=https://api.revivatech.co.uk